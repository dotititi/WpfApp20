<Window x:Class="WpfApp20.ShowDocumentResponseInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp20"
        mc:Ignorable="d"
        Title="ShowDocumentResponseInfoWindow" Height="200" Width="400" MinHeight="280" MinWidth="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Документ:" Margin="0,0,0,10" Grid.Row="0" FontSize="16" FontWeight="Bold" />


        <StackPanel Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="DownloadButton" Content="Скачать" Click="DownloadButton_Click" Width="120" Height="30" Background="White"
                    Margin="0,5,0,10" />
            <Button x:Name="CloseButton" Content="Закрыть" Click="CloseButton_Click" Width="120" Height="30" Background="White"/>
        </StackPanel>
    </Grid>
</Window>
